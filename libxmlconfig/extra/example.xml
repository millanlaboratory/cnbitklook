<!-- 2010-02-10  Michele Tavella <michele.tavella@epfl.ch> 
This file is made up by 3 layers:
	<cnbiconfig ....>
		<block> 
			<entries>
				<value id=...>
			<entries>
		</block> 
		...
	</cnbiconfig> 

Apart the IDs (*id*):
- Each *block* contains any number of *entries*.  
- Each *entries* contain any number of *entry*.
- Each *entry* contains any number of *value*
- Each *value* contains a value.

The XML file is parsed by LibCNBIConfig. The main entrypoint
is "CNBIConfig.hpp", check it out. Also check the *cnbiconfig.cpp* 
example.
The data in the *value* field is automatically sensed by "SmartType.hpp".
The data can be:
- a float: 1.00, 2.42f
- an integer: 1, 2, 10, 1000
- a string: 127.0.0.1, ciao, ciao_a_tutti, 18x
- an unsigned integer: 0x1232, 0xfafa
- a boolean: true, false
Check the "smarttype.cpp" example.

If this help was not useful:
- ask me...
- ... and when you got your answers update this file accordingly!

Be aware: I'm not explaining the use of the *key* fields because 
I am bored now.
-->

<cnbiconfig experiment="oscillatory" experimenter="mtavella">
	<!-- Subject Block -->
	<subject>
		<value id="id">b3</value>
	</subject>
	
	<!-- Timing Block -->
	<timing>
		<entry id="scenes">
			<value id="begin">500.00</value>
			<value id="end">500.00</value>
			<value id="user">200.00</value>
		</entry>

		<entry id="protocol">
			<value id="waitmin">250.00</value>
			<value id="waitmax">250.00</value>
			<value id="fixation">250.00</value>
			<value id="cue">250.00</value>
			<value id="cfeedback">1000.00</value>
			<value id="boom">200.00</value>
		</entry>
		
		<entry id="nic">
			<value id="cfeedback_nic">20000.00</value>
		</entry>
	</timing>

	<!-- Parameters Block -->
	<parameters>
		<entry id="copilot"> 
			<value id="granularity">16</value>
			<value id="threshold">0.85</value>
			<value id="viscosity">0.05</value>
		</entry> 
		<entry id="errorsquares"> 
			<value id="nclasses">2</value>
			<value id="sqpc">5</value>
			<value id="ext_sq_empty">1</value>
			<value id="awesome_classifier">0</value>
			<value id="error_rate">0.20</value>
		</entry> 
	</parameters>

	<!-- Options Block -->
	<configuration>
		<entry id="eegserver"> 
			<value id="ip">127.0.0.1</value>
			<value id="port">8000</value>
			<value id="timeout">10000</value>
		</entry> 
	</configuration>
	
	<!-- Offline Block -->
	<offline>
		<entry id="mi_screen">
			<value id="description">Screening_for_MI</value>
			<value id="threshold">0.85</value>
			
			<!-- Which TaskSet? -->
			<value id="taskset" key="taskset_00"/>
		</entry>
	</offline>
	
	<!-- Online Block -->
	<online>
		<entry id="mi_online">
			<value id="description">Online_BCI_for_MI</value>
			<value id="threshold">0.85</value>
			<value id="integration">0.80</value>
			<value id="rejection">0.60</value>
			<value id="rejectiontype">keepold</value>
			
			<!-- Which Classifier? -->
			<value id="classifier" key="mi0"/>
			<!-- Which TaskSet? -->
			<value id="taskset" key="taskset_01"/>
			<!-- Which Bias ? -->
			<value id="bias" key="bias_20100125"/>
		</entry>
	</online>

	<!-- Classifiers Block -->
	<classifiers>
		<entry id="mi0">
			<value id="description">Test_recording_50pV/1mV</value>
			<value id="filename">a0_mi_20091204.mat</value>
		</entry>
		<entry id="mi1">
			<value id="description">Real_recording_50pV/1mV</value>
			<value id="filename">a0_mi_20091202.mat</value>
		</entry>
	</classifiers>
	
	<!-- Standard Bias Block: Pp = (Pp + B)/sum(Pp + B) -->
	<bias>
		<entry id="bias_20100125">
			<value id="mi_hand_left">0.10</value>
			<value id="mi_hand_right">0.05</value>
		</entry> 
	</bias>
	
	<!-- Custom Block -->
	<custom>
		<entry id="fes">
			<value id="dev">/dev/ttyUSB0</value>
			<value id="frequency">20</value>
		</entry> 
	</custom>
	
	<!-- Standard Task List -->
	<taskset>
		<entry id="taskset_00">
			<value id="classes">4</value>
			<value id="0" key="mi_hand_right">15</value>
			<value id="1" key="mi_hand_left">15</value>
			<value id="2" key="mi_feet">15</value>
			<value id="3" key="mi_rest">5</value>
		</entry> 
		<entry id="taskset_01">
			<value id="classes">2</value>
			<value id="0" key="mi_hand_right">15</value>
			<value id="1" key="mi_hand_left">15</value>
		</entry> 
	</taskset>
	
	<!-- Standard Task List -->
	<tasks>
		<entry id="mi_hand_right">
			<value id="description">Right_Hand_MI</value>
			<value id="gdfevent">0x0302</value>
			<value id="lpttrigger">1</value>
		</entry>
		<entry id="mi_hand_left">
			<value id="description">Left_Hand_MI</value>
			<value id="gdfevent">0x0301</value>
			<value id="lpttrigger">1</value>
		</entry>
		<entry id="mi_hands">
			<value id="description">Both_Hands_MI</value>
			<value id="gdfevent">0x0303</value>
			<value id="lpttrigger">1</value>
		</entry>
		<entry id="mi_feet">
			<value id="description">Feet_MI</value>
			<value id="gdfevent">0x0303</value>
			<value id="lpttrigger">1</value>
		</entry>
		<entry id="mi_rest">
			<value id="description">Rest_MI</value>
			<value id="gdfevent">0x030f</value>
			<value id="lpttrigger">1</value>
		</entry>
	</tasks>
</cnbiconfig>
